<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toast="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adjust_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
     >

    <TextView
        android:id="@+id/adjust_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/green"
        android:padding="20dp"
        android:text="调节"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/adjust_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/green"
        android:focusable="false"
        android:padding="20dp"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <com.wormhole.eyecare.view.DoubleToast
        android:id="@+id/adjust_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        toast:textColor="@color/white" />

</RelativeLayout>